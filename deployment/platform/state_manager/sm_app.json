{
    "include": [
        "deployment/system_definition/platform/sm_service/sm_service.json",
        "deployment/system_definition/platform/sm_service/sm_did.json"
    ],
    "package": "simba.platform",
    "adaptive_application": {
        "state_manager": {
            "app": {
                "functional_groups": [
                    "Startup",
                    "Startup2",
                    "Platform",
                    "Running",
                    "SafetyMode"
                ],
                "parms": "",
                "logger": {
                    "app_id": "SM--",
                    "app_des": "State Manager",
                    "log_level": "kInfo",
                    "log_mode": "kRemote|kConsole"
                }
            },
            "provide": [
                {
                    "name": "CurrentMachineState as CurrentMachineStatePPort",
                    "on": "diag"
                }
            ],
            "require": [
                {
                    "name": "simba.platform.sm.StateManager as SmServiceRPort",
                    "on": "ipc",
                    "instance": 1
                }
            ]
        }
    }
}